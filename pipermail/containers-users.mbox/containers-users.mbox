 let lim = String.length str in
 let assemble_next () = (* we come here only for multi-byte
characters *)
 let cv jmax accu = (* utf8 character length; construction of
uchar *)
 let rec cv' j accu' = (* inner loop j = 1..jmax ; each
uchar *)
