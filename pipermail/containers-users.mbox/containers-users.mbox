 if k &lt; 0 || k &gt;= 0x4000000 then 6 else if k &lt;= 0x7f then 1
 else if k &lt;= 0x7ff then 2 else if k &lt;= 0xffff then 3
 else if k &lt;= 0x1fffff then 4 else 5


