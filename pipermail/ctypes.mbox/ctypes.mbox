--- bug.ml ---
(* 
   The annoying bug.
   Compile with
   ocamlfind ocamlopt -package ctypes,ctypes.foreign -linkpkg \
             -o bug.native bug.ml
*)

open Ctypes
open Foreign

let mach_absolute_time = 
  foreign "mach_absolute_time" (void @-> returning uint64_t)

let main () = 
  Printf.printf "Enter%!";
  while true do ignore (mach_absolute_time ()) done
          
let () = main ()

